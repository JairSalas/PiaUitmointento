@model IEnumerable<Intenteo6.Models.dbModels.Carro>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        .table th {
            background-color: #f2f2f2;
            text-align: left;
        }
        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .table tr:hover {
            background-color: #ddd;
        }
        .table a {
            color: #007bff;
            text-decoration: none;
        }
        .table a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

<h1>Index</h1>

    <p>
        <a asp-action="Create" style="text-decoration: none; color: #3498db; padding: 10px 20px; border: 2px solid #3498db; border-radius: 5px; font-family: Arial, sans-serif; font-size: 16px; transition: background-color 0.3s, color 0.3s;" onmouseover="this.style.backgroundColor='#3498db'; this.style.color='#fff';" onmouseout="this.style.backgroundColor=''; this.style.color='#3498db';">
            Create New
        </a>
    </p>

<table class="table" id="tablaCarros" <>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                Modelo
            </th>
            <th>
               Marca
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdmodeloNavigation.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaNavigation.Marca1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCar">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCar">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCar">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</body>
</html>
@section Scripts {
    <script src="~/js/carros.js"></script>
}

